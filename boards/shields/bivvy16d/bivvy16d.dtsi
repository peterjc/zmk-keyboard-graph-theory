#include <dt-bindings/zmk/matrix_transform.h>
#include <zephyr/dt-bindings/pinctrl/rpi-pico-rp2040-pinctrl.h>
#include <physical_layouts.dtsi>
#include "bivvy16d-layouts.dtsi"

/* Define the TX/RX pins (GP12, GP13) for the wired link between left/right with RP2040 */
&gpio0 {
    status = "okay";
};

&pinctrl {
    pio0_uart0_default: pio0_uart0_default {
        rx_pins {
            pinmux = <PIO0_P13>;
            input-enable;
            bias-pull-up;
        };
        tx_pins {
            pinmux = <PIO0_P12>;
        };
    };
};

&pio0 {
    status = "okay";

    pio0_uart0: serial {
        status = "okay";
        compatible = "raspberrypi,pico-uart-pio";
        pinctrl-0 = <&pio0_uart0_default>;
        pinctrl-names = "default";
        current-speed = <115200>;
    };
};

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &bivvy16d_L16_R16_layout;
        zmk,split-uart = &pio0_uart0;
        // Other chosen items
    };

    /* By design, this is a reversible PCB so same wiring for left and right,
     * so can define the GPIOs once centrally.
     */

    kscan0: kscan0 {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;

        col-gpios
            = <&gpio0 1 GPIO_OPEN_SOURCE>
            , <&gpio0 5 GPIO_OPEN_SOURCE>
            , <&gpio0 10 GPIO_OPEN_SOURCE>
            , <&gpio0 7 GPIO_OPEN_SOURCE>
            , <&gpio0 4 GPIO_OPEN_SOURCE>
            , <&gpio0 14 GPIO_OPEN_SOURCE>
            , <&gpio0 26 GPIO_OPEN_SOURCE>
            , <&gpio0 28 GPIO_OPEN_SOURCE>
            ;

        row-gpios
            = <&gpio0 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&gpio0 27 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };
};

/ {
    wired_split {
        compatible = "zmk,wired-split";
        device = <&pio0_uart0>;
    };
};

